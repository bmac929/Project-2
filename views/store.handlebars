<script>
var username = "bob";
var usercoins = 5000;

        $("#uname").text(username);
        $("#points").text(usercoins);

    var hero = new Audio("./sounds/hero.mp3");
    var fairy = new Audio("./sounds/fairy.mp3");
    var owl = new Audio("./sounds/owl.mp3");
    var pig = new Audio("./sounds/pig.mp3");
