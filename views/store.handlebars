    var genie = new Audio("./sounds/genie.mp3");
    var unicorn = new Audio("./sounds/unicorn.mp3");
    var shark = new Audio("./sounds/shark.mp3");

    var commands = {
        'hero': function () {
            hero.play();
            usercoins -= 100;
        $("#hero").attr("style", "display: none;");
        $("#points").text(usercoins);
        }
        ,
        'fairy': function () {
            fairy.play();
                        usercoins -= 100;
